<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spoilerin.AddCommentActivity">

    <TextView
        android:id="@+id/tv_TambahReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/tv_tambah_review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_addComAct_user"
        android:hint="@string/tv_hint_enterurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/tv_TambahReview"
        app:layout_constraintTop_toBottomOf="@+id/tv_TambahReview"
        android:autofillHints="" />

    <EditText
        android:id="@+id/et_reviews"
        android:layout_width="343dp"
        android:layout_height="191dp"
        android:layout_marginEnd="177dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:hint="@string/tv_hint_enterurreview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_TambahReview"
        app:layout_constraintTop_toBottomOf="@+id/et_addComAct_user"
        android:autofillHints="" />

    <Button
        android:id="@+id/btn_addComAct_inputReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/btn_text_addreview"
        app:layout_constraintEnd_toEndOf="@+id/et_reviews"
        app:layout_constraintTop_toBottomOf="@+id/et_reviews" />

</androidx.constraintlayout.widget.ConstraintLayout>